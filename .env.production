# Server Configuration
NODE_ENV=production
PORT=4243
FRONTEND_URL=https://artisanchikimono.com
CURRENCY=GBP

# MySQL Database Configuration
DB_HOST=your_production_db_host
DB_PORT=3306
DB_NAME=kimono_shop
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# PayPal Configuration - PRODUCTION
PAYPAL_CLIENT_ID=your_production_paypal_client_id
PAYPAL_CLIENT_SECRET=your_production_paypal_client_secret
PAYPAL_API=https://api-m.paypal.com
PAYPAL_ENVIRONMENT=live

# Cloudinary Configuration (Recommended for production)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://artisanchikimono.com

# JWT Configuration
JWT_SECRET=your_strong_production_jwt_secret_here
JWT_EXPIRE=24h
JWT_COOKIE_EXPIRE=24

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_production_email@gmail.com
EMAIL_PASS=your_production_app_password
EMAIL_FROM=noreply@artisanchikimono.com

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
SECURE_COOKIE=true
