# Server Configuration
NODE_ENV=development
PORT=4243
FRONTEND_URL=https://artisanchikimono.com
CURRENCY=GBP

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=kimono_shop
DB_USER=root
DB_PASSWORD=

# PayPal Configuration - SANDBOX
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_API=https://api-m.sandbox.paypal.com
PAYPAL_ENVIRONMENT=sandbox

# Cloudinary Configuration (Optional - for cloud image storage)
# Sign up at https://cloudinary.com for free account
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://artisanchikimono.com,http://localhost:5173

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=24h
JWT_COOKIE_EXPIRE=24

# Email Configuration (for testing)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password
EMAIL_FROM=noreply@artisanchikimono.com

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
SECURE_COOKIE=false